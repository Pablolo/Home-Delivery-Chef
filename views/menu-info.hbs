<div class="menu-info-container">
	<div class="menu-info-background-box">
		<h2 class="menu-info-title">{{ foundMenu.title }}</h2>
		<div class="menu-info-box">
			<div class="menu-info-image-box">
				<img class="menu-info-image" src="{{ foundMenu.starter.image }}" alt="Menu image">
			</div>
			<div class="menu-info-info">
				<h3 class="menu-info-name">{{ foundMenu.starter.name }}</h3>
				<p class="menu-info-dish-properties"><strong class="strong-title">Description: </strong>{{ foundMenu.starter.description }}</p>
				<p class="menu-info-dish-properties"><strong class="strong-title">Ingredients: </strong>
				<p>{{ foundMenu.starter.ingredients }}.</p>
				</p>
			</div>
		</div>

		<div class="menu-info-box">
			<div class="menu-info-image-box">
				<img class="menu-info-image" src="{{ foundMenu.mainCourse.image }}" alt="Menu image">
			</div>
			<div class="menu-info-info">
				<h3 class="menu-info-name">{{ foundMenu.mainCourse.name }}</h3>
				<p class="menu-info-dish-properties"><strong class="strong-title">Description: </strong>{{ foundMenu.mainCourse.description }}</p>
				<p class="menu-info-dish-properties"><strong class="strong-title">Ingredients: </strong>
				<p>{{ foundMenu.mainCourse.ingredients }}.</p>
				</p>
			</div>
		</div>

		<div class="menu-info-box">
			<div class="menu-info-image-box">
				<img class="menu-info-image" src="{{ foundMenu.dessert.image }}" alt="Menu image">
			</div>
			<div class="menu-info-info">
				<h3 class="menu-info-name">{{ foundMenu.dessert.name }}</h3>
				<p class="menu-info-dish-properties"><strong class="strong-title">Description: </strong>{{ foundMenu.dessert.description }}</p>
				<p class="menu-info-dish-properties"><strong class="strong-title">Ingredients: </strong>
				<p>{{ foundMenu.dessert.ingredients }}.</p>
			</div>
		</div>
	</div>

	<div class="menu-info-general">
		<p class="menu-info-properties"><strong>Time: </strong>{{ foundMenu.time }}min</p>
		<p class="menu-info-properties"><strong>Chef: <a class="link-chef-from-menu"" href="/chefs/{{chefCreator._id}}"></strong>{{ chefCreator.name }} {{ chefCreator.surname }}</p></a>
		<p class="menu-info-properties"><strong>Cuisine: </strong>{{ foundMenu.cuisine }}</p>
		<p class="menu-info-properties"><strong>Price: </strong>{{ foundMenu.price }}â‚¬</p>
		<div class="menu-info-general-button-user">
			{{#if @root.currentClient }}
				<form action="/cart/{{ foundMenu._id }}/addToCart" method="post">
					<button class="menu-info-buy-button" type="submit">Add to Cart +</button>
				</form>
			{{/if}}
		</div>
			
		<div class="menu-info-general-buttons-chef">	
			{{#if_equal foundMenu.chef_id currentChef._id}}
			<a class="menu-info-edit-button" href="/menus/{{ foundMenu._id }}/update-menu">Edit Your Menu</a>
				<form action="/menus/{{ foundMenu._id }}/delete" method="post">
					<button class="menu-info-delete-button">Delete Your Menu</button>
				</form>
			{{/if_equal}}
		</div>
	</div>
</div>