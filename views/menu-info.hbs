<div class="menu-info-container">
	<h2 class="menu-info-title">{{ foundMenu.title }}</h2>
	<div class="menu-info-box">
		<div class="menu-info.image-box">
			<img class="menu-info-image" src="{{ foundMenu.starter.image }}" alt="Menu image">
		</div>
		<div class="menu-info-info">
			<p class="menu-info-name">{{ foundMenu.starter.name }}</p>
			<p class="menu-info-properties"><strong>Description</strong>{{ foundMenu.starter.ingredients }}</p>
			<p class="menu-info-properties"><strong>Ingredients</strong>{{ foundMenu.starter.description }}</p>
		</div>
	</div>

	<div class="menu-info-box">
		<div class="menu-info.image-box">
			<img class="menu-info-image" src="{{ foundMenu.mainCourse.image }}" alt="Menu image">
		</div>
		<div class="menu-info-info">
			<p class="menu-info-name">{{ foundMenu.mainCourse.name }}</p>
			<p class="menu-info-properties"><strong>Description</strong>{{ foundMenu.mainCourse.ingredients }}</p>
			<p class="menu-info-properties"><strong>Ingredients</strong>{{ foundMenu.mainCourse.description }}</p>
		</div>
	</div>

	<div class="menu-info-box">
		<div class="menu-info.image-box">
			<img class="menu-info-image" src="{{ foundMenu.dessert.image }}" alt="Menu image">
		</div>
		<div class="menu-info-info">
			<p class="menu-info-name">{{ foundMenu.dessert.name }}</p>
			<p class="menu-info-properties"><strong>Description</strong>{{ foundMenu.dessert.ingredients }}</p>
			<p class="menu-info-properties"><strong>Ingredients</strong>{{ foundMenu.dessert.description }}</p>
		</div>
	</div>

	<div>
		<p class="menu-info-properties"><strong>Time</strong>{{ foundMenu.time }}</p>
		<p class="menu-info-properties"><strong>Chef</strong>{{ foundMenu.chef_id.name }}</p>
		<p class="menu-info-properties"><strong>Cuisine</strong>{{ foundMenu.cuisine }}</p>
		<p class="menu-info-properties"><strong>Price</strong>{{ foundMenu.price }}</p>
		{{#if @root.currentClient }}
			<button class="menu-info-buy-button"><a href="<!MISSING CART ROUTE>">Add to Cart</a></button>
    {{/if}}

		{{#if_equal foundMenu.chef_id currentChef._id}}
			<button class="menu-info-edit-button"><a href="/menus/{{ foundMenu._id }}/update-menu">Edit Your Menu</a></button>
		{{/if_equal}}
	</div>

</div>